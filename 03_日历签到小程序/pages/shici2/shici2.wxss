/* pages/shici/shici.wxss */

.shici-title{
  position: fixed;
  top:0px;
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  border: 1px solid #49b5f6;
  background-color: #49b5f6;
  font-size: 24px;
  color: #FFFFFF;
}

.shici-content{
  margin-top: 80px;
  text-align: center;
}
.shici-content button{
  margin-bottom: 10px;
  width: 80%;
}
.shici-result{
  margin-top: 20px;
  width: 100%;
  text-align: center;
}

.re-answer{
  border: 1px solid #49b5f6;
  margin-top: 80px;
  width: 60%;
  color: red;
}

.Grid-container-spce{
  margin-top: 100px;
  display: flex;
  align-items: center;
  flex-flow: wrap;
}
.Grid-container-spce button{
  width: 50px;
  height: 50px;
}

.Grid-container{
  padding: 0px 10px;
  margin-top: 50px;
  display: flex;
  align-items: center;
  flex-flow: wrap;
}

.Grid-container button{
  width: 80px;
  height: 80px;
  line-height: 80px;
  margin-bottom: 10px;
  font-size: 24px;
}

.hidden-btn{
  opacity:0.0;
}